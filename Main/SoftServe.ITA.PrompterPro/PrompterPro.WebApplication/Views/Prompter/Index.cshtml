@{
    Layout = "../_Layout.cshtml";
}
@section Scripts
{
	@*<script src="~/Scripts/min/prompter.min.js"></script>*@
<script src="~/app/Prompter/prompter-controller.js"></script>
<script src="~/app/Prompter/prompter-repository.js"></script>
<script src="~/app/Prompter/prompter-service.js"></script>

}
<div ng-app="app" ng-controller="prompterController" style="min-width:1140px">
    <div class="container" id="container" style="width: 1140px;height:400px !important">
        <div id="prompterRow" class="row">
            <div class="col-xs-2" style="padding-top: 200px;width:15%">
                <img src="~/Content/Trinagles/left-triangle.png" class="pull-rigth" />
            </div>
            <textarea id="area" disabled="disabled" readonly="readonly"
                      class="col-xs-8 textarea-prompter"
                      ng-style="{'paddingRight':rightPadding +'%','paddingLeft':leftPadding + '%','font-size':textSize + 'px'}"
                      style="width:70%; min-height:400px; height:100%">
                {{script ? displayText(): ""}}
            </textarea>
            <div class="col-xs-2" style="padding-top: 200px;width:15%">
                <img src="~/Content/Trinagles/right-triangle.png" />
            </div>
        </div>
    </div>
</div>